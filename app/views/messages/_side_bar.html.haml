.side
  .side__user
    .side__user__top-items
      %p.side__user__top-items__user-name
        = current_user.name
      %ul.side__user__top-items__icons
        %li.side__user__top-items__icons__group
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit', class: 'icon')
        %li.side__user__top-items__icons__user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side__group
    - current_user.groups.each do |group|
      =link_to '#' do
        %p.side__group__group-name
          =group.name
        %p.side__group__group-message
          まだメッセージがありません


